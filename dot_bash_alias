# shortcut functions
function make_dir_and_cd_to_it () { mkdir "$@"; cd "$_"; }
function go_back_n_times () { printf -v gbnt_txt "%${1}s"; cd ${gbnt_txt// /../}; unset gbnt_txt; }

# typora
alias typora="open -a typora"

# composer
# alias composer='composer.phar'

# some more ls aliases
alias ll='ls -alFh'
alias la='ls -A'
alias l='ls -CF'
alias c='clear'

# other
alias md='make_dir_and_cd_to_it'
alias cdb='go_back_n_times'

# docker aliases
alias dps='docker ps'
alias dcx='docker-compose exec'
alias dcu='docker-compose up'
alias dcd='docker-compose down'
alias dce='docker-compose stop'
alias dcs='docker-compose start'
alias dcps='docker-compose ps'

# git aliases
alias rgls="find ./ -maxdepth 1 -type d -not -path '.*/' -exec sh -c '([ -d {}/.git ] && echo {} status: && cd {} && git status -s && echo)' \;"
alias rgbr="find ./ -maxdepth 1 -type d -not -path '.*/' -exec sh -c '([ -d {}/.git ] && echo {} status: && cd {} && git branch && echo)' \;"
alias gad='git add'
alias gcm='git commit -m'
alias gca='git commit --amend'
alias gp='git push'
alias gpl='git pull'
alias gls='clear && git status -s .'
alias glsa='clear && git status -s'
alias gck='git checkout'
alias gbra='git branch'
alias gbr='git branch --show-current'
alias gdf='git diff'

